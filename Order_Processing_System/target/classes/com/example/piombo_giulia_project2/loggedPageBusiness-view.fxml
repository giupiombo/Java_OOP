<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<GridPane fx:controller="com.example.piombo_giulia_project2.LoggedPageBusinessController" xmlns:fx="https://javafx.com/fxml"
          alignment="TOP_CENTER" hgap="10" vgap="10">

    <padding>
        <Insets top="100" bottom="100" left="100" right="100"/>
    </padding>

    <Button fx:id="processOrderButton" text="Process Order" onAction="#switchLoggedPressed"
            GridPane.rowIndex="1" GridPane.columnIndex="0" maxHeight="20" maxWidth="200">
        <font>
            <Font name="Times New Roman" size="20"/>
        </font>
    </Button>

    <Button fx:id="shipOrderButton" text="Ship Order" onAction="#switchLoggedPressed"
            GridPane.rowIndex="2" GridPane.columnIndex="0" maxHeight="20" maxWidth="200">
        <font>
            <Font name="Times New Roman" size="20"/>
        </font>
    </Button>

    <Button fx:id="viewStockButton" text="View Stock" onAction="#switchLoggedPressed"
            GridPane.rowIndex="3" GridPane.columnIndex="0" maxHeight="20" maxWidth="200">
        <font>
            <Font name="Times New Roman" size="20"/>
        </font>
    </Button>

    <Button fx:id="logOutButton" text="Log Out" onAction="#switchLoggedPressed"
            GridPane.rowIndex="4" GridPane.columnIndex="0" maxHeight="20" maxWidth="200">
        <font>
            <Font name="Times New Roman" size="20"/>
        </font>
    </Button>

</GridPane>