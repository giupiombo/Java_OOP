<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<GridPane fx:controller="com.example.piombo_giulia_project2.LogOnController" xmlns:fx="https://javafx.com/fxml"
          alignment="TOP_CENTER" hgap="10" vgap="10">

    <padding>
        <Insets top="100" bottom="100" left="100" right="100"/>
    </padding>

    <VBox alignment="CENTER" spacing="10.0">

        <HBox alignment="CENTER">
            <Label text="Username: ">
                <font>
                    <Font name="Times New Roman bold" size="15"/>
                </font>
            </Label>
            <TextField fx:id="usernameInput"/>
        </HBox>

        <HBox alignment="CENTER">
            <Label text="Password: ">
                <font>
                    <Font name="Times New Roman bold" size="15"/>
                </font>
            </Label>
            <TextField fx:id="passwordInput"/>
        </HBox>

        <Button fx:id="loginButton" text="Log On" onAction="#switchToLoggedPage"
                maxHeight="20" maxWidth="150">
            <font>
                <Font name="Times New Roman" size="15"/>
            </font>
        </Button>
    </VBox>

</GridPane>