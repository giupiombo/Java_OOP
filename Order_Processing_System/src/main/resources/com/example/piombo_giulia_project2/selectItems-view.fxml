<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>

<GridPane fx:controller="com.example.piombo_giulia_project2.SelectItemsController" xmlns:fx="https://javafx.com/fxml"
          alignment="TOP_CENTER" hgap="10" vgap="10">

    <padding>
        <Insets top="100" bottom="100" left="100" right="100"/>
    </padding>

    <VBox alignment="CENTER" spacing="10.0">

        <!--    iPhone 13   -->
        <CheckBox fx:id="iphone" text="iPhone 13">
            <font>
                <Font name="Times New Roman bold" size="20"/>
            </font>
        </CheckBox>
        <Label text="Description: The iPhone is a smartphone made by Apple that combines a computer, iPod, digital camera and cellular phone into one device with a touchscreen interface.">
            <font>
                <Font name="Times New Roman bold" size="15"/>
            </font>
        </Label>
        <Label text="Price: $999">
            <font>
                <Font name="Times New Roman bold" size="15"/>
            </font>
        </Label>
        <Label text="Sales Price: $799">
            <font>
                <Font name="Times New Roman bold" size="15"/>
            </font>
        </Label>
        <HBox alignment="CENTER">
            <Label text="Quantity: ">
                <font>
                    <Font name="Times New Roman bold" size="15"/>
                </font>
            </Label>
            <TextField fx:id="iphoneQuantity"/>
        </HBox>

        <!--    Apple Watch Series 7   -->
        <CheckBox fx:id="watch" text="Apple Watch Series 7">
            <font>
                <Font name="Times New Roman bold" size="20"/>
            </font>
        </CheckBox>
        <Label text="Description: Apple Watch is a wearable smartwatch that allows users to accomplish a variety of tasks, including making phone calls, sending text messages and reading email.">
            <font>
                <Font name="Times New Roman bold" size="15"/>
            </font>
        </Label>
        <Label text="Price: $449">
            <font>
                <Font name="Times New Roman bold" size="15"/>
            </font>
        </Label>
        <Label text="Sales Price: $349">
            <font>
                <Font name="Times New Roman bold" size="15"/>
            </font>
        </Label>
        <HBox alignment="CENTER">
            <Label text="Quantity: ">
                <font>
                    <Font name="Times New Roman bold" size="15"/>
                </font>
            </Label>
            <TextField fx:id="watchQuantity"/>
        </HBox>

        <!--    AirPods 3rd Generation   -->
        <CheckBox fx:id="airpods" text="AirPods 3rd Generation">
            <font>
                <Font name="Times New Roman bold" size="20"/>
            </font>
        </CheckBox>
        <Label text="Description: AirPods are wireless Bluetooth earbuds designed by Apple Inc.">
            <font>
                <Font name="Times New Roman bold" size="15"/>
            </font>
        </Label>
        <Label text="Price: $179">
            <font>
                <Font name="Times New Roman bold" size="15"/>
            </font>
        </Label>
        <Label text="Sales Price: $100">
            <font>
                <Font name="Times New Roman bold" size="15"/>
            </font>
        </Label>
        <HBox alignment="CENTER">
            <Label text="Quantity: ">
                <font>
                    <Font name="Times New Roman bold" size="15"/>
                </font>
            </Label>
            <TextField fx:id="airpodsQuantity"/>
        </HBox>

        <Button fx:id="endCartButton" text="End Cart" onAction="#switchToEndCart"
                GridPane.rowIndex="1" GridPane.columnIndex="0" maxHeight="20" maxWidth="200">
            <font>
                <Font name="Times New Roman" size="20"/>
            </font>
        </Button>
    </VBox>

</GridPane>